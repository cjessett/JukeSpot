<h2>Join <%= @party.name %></h2>

<hr>

<% if current_user %>
<%= button_to "Join", { action: "create", id: @party.id }, class:"btn btn-success btn-lg" %>
<% else %>
<div class="row lead">
  <%= link_to 'Login with Spotify',
              '/auth/spotify',
              class:"btn btn-success btn-lg col-xs-8 offset-xs-2 col-md-6 offset-md-3" %>
</div>
<% end %>

