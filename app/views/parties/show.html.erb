<div class="row">
  <div class="col-md-6 offset-md-3">
  <!-- Party Title -->
  <h2><%= @party.name %></h2>

  <!-- Created new playlist alert -->
  <% if flash[:notice] %>
    <div class="row">
      <div class="alert alert-success col-md-12" role="alert">
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>

  <!-- Import and Create playlist buttons -->
  <% if !@party.spotify_playlist_id %>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#importPlaylistModal">
      Import Playlist
    </button>

    <%= link_to 'Create A New Spotify Playlist',
                "/parties/#{@party.id}/new_playlist",
                class:"btn btn-success btn-lg",
                role:"button", method:'patch' %>
  <% end %>
  </div>

  <!-- Party Tracks -->
  <div class="row">
    <!-- Staged Tracks -->
    <div class="col-xs-6">
      <h2>Staged</h2>
      <%= render partial: "track_list", locals: {tracks: @party.staged_tracks} %>
    </div>
    <!-- Active tracks -->
    <div class="col-xs-6">
      <h2>Active</h2>
      <%= render partial: "track_list", locals: {tracks: @party.active_tracks} %>
    </div>
  </div>
</div>


<!-- Import playlist Modal -->
<div class="modal fade" id="importPlaylistModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Your Playlists</h4>
      </div>
      <div class="modal-body">
      <% if spotify_user.playlists %>
        <ul class="list-group">
          <% spotify_user.playlists.each do |playlist| %>
            <%= button_to playlist.name, {action: "import", party_id: @party.id },
                                          method: :patch,
                                          params: { playlist_id: playlist.id, owner_id: playlist.owner.id },
                                          class:"list-group-item list-group-item-action" %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
  </div>
</div>

